<html>
  <head>
    <title>
      <%= title %>
    </title>
    <link rel="stylesheet" href="/css/home.css">
  </head>
  <body>
    <h1 id = "page-heading"><%= title %></h1>
    <% if(currUserEmail != '') {%>
      <div>
        <a href="/sign-out">
          <i><button>Sign Out</button></i>
        </a>
      </div>
      <div class = "list">
        <% for(let i of todo_list) { %>
          <% if(i.createdby == currUserEmail) {%>
          <div class="details">
            <p><%= i.name %></p>
            <span>
              <div class="edit">
                <a href="/update-todo/?id=<%= i._id %>">
                    <i><button>edit</button></i>
                </a>
            </div>
            <div>
              <a href="/delete-todo/?id=<%= i._id %>">
              <button class = "del">del</button>
            </a>
            </div>
            </span>
          </div>
          <% } %>
        <% } %>
      </div>
      <form action="/create-todo" method="POST">
        <input type="text" name="name" placeholder="Enter Name" required>
        <button type="submit">Add</button>
      </form>
    <% } %>
    <% if(currUserEmail == ''){ %>
      <div>
        <a href="/sign-in">
          <i><button>Sign In</button></i>
        </a>
      </div>
    <% } %>
    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>